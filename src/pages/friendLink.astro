---
import {friendLinksConfig} from '@/config'
import FriendCard from "@components/FriendCard"
import I18nKey from '@i18n/i18nKey'
import { i18n } from '@i18n/translation'
import MainGridLayout from '@layouts/MainGridLayout.astro'
---
<MainGridLayout title={i18n(I18nKey.friendLink)} description={i18n(I18nKey.friendLink)} >
  <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
    <div class="card-base z-10 px-9 py-6 relative w-full flex flex-wrap gap-8 ">
      {friendLinksConfig.map(({avatarURL, link, bio, nickname}) => {
        return <FriendCard className='flex-none w-2/5' avatarURL={avatarURL} link={link} bio={bio} nickname={nickname} client:load />
      })}
    </div>
  </div>
</MainGridLayout>
